<% include ../partials/header %>


  <div class="container">

    <div class="row">

      <div class="col s12 m4">

        <span>User Profile</span>
        <div class="card">
          <div class="card-title">
            <p>
              <a href="mailto:<%= user.email%>">
                <%= user.username%>
              </a>
            </p>
          </div>
          <div class="card-image">
            <img src="<%= user.avatar %>" alt="Avatar Image">
          </div>
        </div>

        <p>Lorem ipsum, dolor sit amet consectetur adipisicing elit. Qui sit fuga, impedit, commodi perferendis doloribus dolor
          esse assumenda ratione quis, facere aperiam libero rerum dolores dolore a id autem reiciendis.
        </p>

      </div>

      <div class="col s12 m8">
        <%= user.username + "'s camping sites ..."%>
          <ul>

            <% campgrounds.forEach(campground => {%>
              <li>
                <a href="/campgrounds/<%= campground.id %>">
                  <%= campground.name %>
                </a>
              </li>
              <% }) %>

          </ul>
      </div>

      <div>
        <br>
        <a href="/campgrounds">Back to campgrounds</a>
      </div>

    </div>

  </div>


  <% include ../partials/footer %>