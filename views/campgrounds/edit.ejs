<% include ../partials/header %>

  <div class="container">

    <div class="row">

      <h2 class="center-align">Edit
        <%= campground.name %>
      </h2>

      <div style="width: 80%; margin: 50px auto;">


        <form method="post" action="/campgrounds/<%= campground._id %>?_method=PUT" enctype="multipart/form-data">
          <div class="input-field">
            <input value="<%= campground.name %>" required type="text" name="campground[name]" placeholder="New Campground">
            <label for="campground[name]">First Name</label>
          </div>

          <div class="input-field">
            <input type="file" id="campground[image]" name="campground[image]" accept="image/*">
          </div>

          <div class="input-field">
            <input value="<%= campground.description %>" required type="text" name="campground[description]" placeholder="Description">
          </div>

          <div class="input-field">
            <input value="<%= campground.price %>" required type="number" min="0.01" step="0.01" max="999999" name="campground[price]"
              placeholder="Price">
          </div>

          <div class="input-field">
            <input value="<%= campground.location %>" required type="text" name="campground[location]" placeholder="Location">
          </div>

          <button class="waves-effect waves-light btn">Edit Campground</button>
        </form>

        <div>
          <a href="/campgrounds">Go Back</a>
        </div>

      </div>


    </div>

  </div>

  <% include ../partials/footer %>